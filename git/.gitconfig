	ui = true
	pager = true
	branch = auto
	diff = auto
[color "status"]
	added = green
	changed = cyan
	untracked = yellow
[color "diff"]
	frag = magenta bold
	meta = green bold
	new = cyan
	old = yellow
[alias]
	bc = branch
	cl = clone
	cm = commit
	co = checkout
	cp = cherry-pick
	cs = commit -S
	df = diff
	fp = format-patch
	it = init
	lg = log
	mg = merge
	pl = pull
	ps = push
	rb = rebase
	rs = reset
	sh = show
	sm = submodule
	st = status
	ts = tag -s
	vc = verify-commit
[push]
	default = simple
[merge]
	tool = vimdiff
